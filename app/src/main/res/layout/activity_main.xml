<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="pseudonerds.in.tictactoe.MainActivity">

    <ImageView
        android:id="@+id/board"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/board" />

    <ImageView
        android:id="@+id/pos1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/pos5"
        app:layout_constraintRight_toLeftOf="@+id/pos5"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toTopOf="@+id/pos5"
        app:layout_constraintRight_toRightOf="@+id/pos5"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/pos5"
        app:layout_constraintLeft_toRightOf="@+id/pos5"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/pos5"
        app:layout_constraintRight_toLeftOf="@+id/pos5"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/pos5"
        app:layout_constraintLeft_toRightOf="@+id/pos5"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@+id/pos5"
        app:layout_constraintTop_toBottomOf="@+id/pos5"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/pos5"
        app:layout_constraintTop_toBottomOf="@+id/pos5"
        app:srcCompat="@drawable/transparent" />

    <ImageView
        android:id="@+id/pos9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/transparent"
        app:layout_constraintLeft_toRightOf="@+id/pos5"
        app:layout_constraintTop_toBottomOf="@+id/pos5" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Turn: "
        android:textStyle="bold"
        android:textColor="#111"
        android:textSize="16sp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@+id/pos8"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/turn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="92dp"
        app:layout_constraintLeft_toRightOf="@+id/textview"
        app:layout_constraintTop_toBottomOf="@+id/pos8"
        app:srcCompat="@drawable/o" />

    <Button
        android:id="@+id/replay"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="15sp"
        android:layout_marginTop="65dp"
        android:backgroundTint="#008975"
        android:text="Play  Again"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIC"

        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="#a9004a"

        app:layout_constraintRight_toLeftOf="@+id/textView4"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAC"

        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="#2059a5"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOE"

        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="#a9004a"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Label"
        android:gravity="center"

        android:textSize="35sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="#111"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/replay"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageView
        android:id="@+id/symbol"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@+id/replay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/o" />

</android.support.constraint.ConstraintLayout>
